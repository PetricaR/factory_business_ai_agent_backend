# Application Deployment Configuration
# =====================================
# This configuration is for deploying applications to an existing GKE cluster

# Project Configuration
export GCP_PROJECT_ID="formare-ai"
export GCP_REGION="europe-west4"

# Cluster Configuration
export CLUSTER_NAME="ai-agents-cluster"

# Application Configuration
export APP_NAME="agent-factory-ai"
export K8S_NAMESPACE="default"

# Kubernetes Resource Configuration (for auto-generated YAML)
export REPLICAS="2"
export PORT="8080"
export MEMORY_REQUEST="512Mi"
export MEMORY_LIMIT="1Gi"
export CPU_REQUEST="500m"
export CPU_LIMIT="1000m"

# Registry Configuration
export REGISTRY_TYPE="gcr"  # Options: gcr, artifact-registry
export AR_LOCATION="europe-west4"
export AR_REPOSITORY="docker-repo"

# Build Configuration
# Path to your application code (relative to scripts directory)
export BUILD_CONTEXT=".."

# Optional: Uncomment to use different service account name
# export K8S_SA_NAME="custom-sa"
