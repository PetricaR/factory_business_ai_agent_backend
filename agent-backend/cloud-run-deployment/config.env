# Cloud Run Deployment Configuration
# ===================================
# This configuration is for deploying applications to Google Cloud Run

# Project Configuration
export GCP_PROJECT_ID="formare-ai"
export GCP_REGION="europe-west4"

# Application Configuration
export APP_NAME="agent-factory-ai"
export SERVICE_NAME="${APP_NAME}"

# Cloud Run Configuration
export PLATFORM="managed"  # managed or gke
export ALLOW_UNAUTHENTICATED="true"  # Set to "false" for authenticated access only

# Resource Configuration
export MEMORY="1Gi"
export CPU="1"
export MAX_INSTANCES="10"
export MIN_INSTANCES="0"  # Set to 1+ to avoid cold starts
export TIMEOUT="300"  # Request timeout in seconds
export CONCURRENCY="80"  # Maximum concurrent requests per instance

# Registry Configuration
export REGISTRY_TYPE="gcr"  # Options: gcr, artifact-registry
export AR_LOCATION="europe-west4"
export AR_REPOSITORY="docker-repo"

# Build Configuration
# Path to your application code (relative to scripts directory)
export BUILD_CONTEXT=".."

# Environment Variables (optional)
# Add your application-specific environment variables here
# export GEMINI_API_KEY="your-api-key"
# export DATABASE_URL="your-database-url"
