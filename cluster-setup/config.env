# GKE Cluster Infrastructure Configuration
# =========================================
# This configuration is for one-time cluster setup and infrastructure provisioning

# Project Configuration
export GCP_PROJECT_ID="formare-ai"
export GCP_REGION="europe-west4"

# Cluster Configuration
export CLUSTER_NAME="ai-agents-cluster"
export CLUSTER_ZONE="europe-west4-a"
export NETWORK="default"

# Service Account Configuration
# The GCP service account that will be created for workload identity
export APP_NAME="agent-factory-ai"
export GCP_SA_NAME="${APP_NAME}-sa"

# Kubernetes Service Account
export K8S_NAMESPACE="default"
export K8S_SA_NAME="default"

# Optional: Uncomment to use different service account name
# export K8S_SA_NAME="custom-sa"
